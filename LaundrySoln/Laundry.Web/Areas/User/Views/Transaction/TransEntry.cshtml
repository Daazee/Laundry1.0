                    }
                    else if ($('#Address').val() == "") {
                        alert("Please enter customer address");
                        $('#Address').focus();
                    }
                    else if ($("#LaundryType :selected").text() == "Select") {
                        alert("Please select laundry type");
                        $('#LaundryType').focus();
                    }
                    else if ($("#PaymentMode").val() == "") {
                        alert("Please select payment mode");
                    }
                    else if ($("#CustomerPhone").val() == "") {
