                        $('#CustomerPhone').focus();
                    }
                    else if ($("#AmountPaid").val() == "") {
                        alert("Please enter amount paid");
                        $('#AmountPaid').focus();
                    }
                    else if (!$.isNumeric($("#AmountPaid").val())) {
